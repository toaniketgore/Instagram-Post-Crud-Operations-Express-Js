<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="style.css">
</head>

<body>



    <h4 class="text-center my-2">Instagram post functionality using Node Js</h4>
    <div class="d-flex justify-content-center">
        <a href="http://localhost:3000/posts/new"><button type="submit" class="btn btn-info">Create New
                Post</button></a>
    </div>


    <div class="post-container d-flex container-fluid">
        <% for(post of posts){ %>

            <div class="card d-flex justify-content-center mx-4  my-4 postCard " style="width: 14rem;">
                <h5 class="card-title">
                    @<%=post.username%>
                </h5>
                <img src="<%=post.img%>" class="card-img-top px-4 postImg" alt="...">
                <div class="card-body">
                    <p class="card-text">
                        <%=post.caption%>
                    </p>
                    <p class="card-text d-inline ">Likes: <%=post.likes%>
                            <form method="post" action="/posts/<%=post.id%>/like?_method=PATCH" class="d-inline">
                                <button class="btn btn-success btn-sm likeBtn">Like</button>
                            </form>
                    </p>

                    <a href="http://localhost:3000/posts/<%=post.id%>/edit" class="btn btn-primary btn-sm">Edit Post</a>

                    <form method="post" action="/posts/<%=post.id%>?_method=DELETE" class="d-inline">
                        <button class="btn btn-danger btn-sm">Delete Post</button>
                    </form>
                </div>
            </div>

            <% } %>

    </div>








    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>